            <soup.neumorphism.NeumorphButton
                android:id="@+id/run_sf"
                style="@style/Widget.Neumorph.Button"
                android:layout_below="@id/programs_sf"
                app:neumorph_shadowColorLight="?attr/colorOnPrimary"
                app:neumorph_shadowColorDark="?attr/colorOnSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="15dp"
                android:text="RUN"
                android:textColor="@color/white"
                app:neumorph_backgroundColor="#3F4671">

            </soup.neumorphism.NeumorphButton>
        </LinearLayout>




            <EditText
                android:layout_below="@+id/title_py"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/programs_sf"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/search_view"
                android:lines="13"
                android:maxLines="18"
                android:fontFamily="@font/poppins"
                android:textSize="18dp"
                android:hint="A good programmer wil not wait for opprtunity , he will create opprtunity..."/>

